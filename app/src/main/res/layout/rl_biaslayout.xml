<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView at the top, centered horizontally -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centered Button Example"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Button centered below the TextView -->
    <Button
        android:id="@+id/centeredButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centered Button"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true" />

    <!-- Left aligned button below the centered button -->
    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Aligned"
        android:layout_below="@id/centeredButton"
        android:layout_alignParentStart="true" />

    <!-- Right aligned button below the centered button -->
    <Button
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Aligned"
        android:layout_below="@id/centeredButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
